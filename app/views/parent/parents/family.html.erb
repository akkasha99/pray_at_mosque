    function create_family_member() {
        if ($("#family1_form").valid() == true) {
            $(".background_shadow").show();
            $("#family1_form").ajaxSubmit({
                success: function (data) {
                    if (data == 'success') {
                        $(".background_shadow").hide()
                        hudMsg('success', 'Added Successfully.')
                    }
                    else if (data == 'error') {
                        $(".background_shadow").hide()
                        hudMsg('error', 'Something went wrong. Try again later.')
                    }
                    else if (data == 'error2') {
                        $(".background_shadow").hide()
                        hudMsg('error', 'This email has already been taken.')
                    }
                },
                error: function (data) {

                }
            });
        }
    }
    $("#family1_form").validate({
                rules: {
                    "user[first_name]": {
                        required: true,
                        maxlength: 255
                    },
                    "user[last_name]": {
                        required: true,
                        maxlength: 255

                    },
                    "user[email]": {
                        required: true,
                        maxlength: 255,
                        email: true, remote: {
                            url: "/parent/parents/check_email?email=" + "user[email]",
                            type: "get"
                            //                                //                            dataType:'html'
                        }
                    },
                    "user[phone]": {
                        required: true,
                        maxlength: 255,
                        minlength: 6,
                        number: true
                    }
                },
                messages: {
                    "user[email]": {
                        remote: "Email already exists."
                    }
