<div id="panel_body" class="page-content-wrapper">
  <div class="page-content" style="min-height:1215px">
    <div class="row">
      <div class="col-md-12">
        <div class="row">

          <div class="portlet">
            <div class="portlet-title">
              <div class="caption">
                <i class="icon-edit font-dark"></i>
                <span class="caption-subject font-dark bold uppercase">Welcome</span>
              </div>
            </div>
            <div class="portlet-body">
              <div class="note note-success">
                <h4 class="block">Verse of the Day</h4>

                <p> <%= @verse_of_day.content if @verse_of_day.present? %></p>
              </div>
              <div class="note note-info">
                <h4 class="block">Hadith of the Day</h4>

                <p> <%= @hadith_of_day.content if @hadith_of_day.present? %></p>
              </div>
              <div class="note note-danger">
                <h4 class="block">Quote of the Day</h4>

                <p><%= @quote_of_day.content if @quote_of_day.present? %></p>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>
